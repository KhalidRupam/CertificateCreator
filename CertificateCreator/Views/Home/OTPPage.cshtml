@model CertificateCreator.Models.LoginEntity



<div class="row">
    <div class="col-md-4">
        
    </div>
</div>


<div class="container " style="height:100vh">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-4 col-0">
        </div>
        <div class="col-md-4 col-12">
            <div class="card p-5">
                <form asp-action="OTPPage">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h5 class="text-center">OTP has been sent to @Model.Email.</h5>
                    <div class="form-group mt-3">
                        <input type="text " name="email" id="email" placeholder="Email" class="form-control d-none" readonly value="@Model.Email" />
                    </div>

                    <div class="form-group mt-3">
                        <input type="number" name="otp" id="otp" placeholder="Enter OTP" class="form-control" sty/>
                    </div>

                    <div class="form-group mt-3 w-100">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                    <span class="text-muted">If you do not receive the OTP within a few minutes, please check your spam folder or request 
                        <a asp-action="NewOtp" asp-route-email="@Model.Email"> a new OTP.</a>
                    </span>
                    
                </form>
            </div>
        </div>
        <div class="col-md-4 col-0">
        </div>
    </div>

</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
